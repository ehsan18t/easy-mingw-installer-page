---
import JumpButton from './JumpButton.astro';
import { Icon } from 'astro-icon/components';
---

<section class="bg-gradient-to-r from-teal-900 to-blue-600 py-20 text-white">
  <div class="mx-auto text-center flex flex-col justify-center items-center">
    <h1 class="mb-4 text-5xl font-bold tracking-tight">Easy MinGW Installer</h1>
    <p class="mb-8 max-w-lg text-lg">
      Simplify your MinGW setup with a seamless two-click installation experience.
    </p>
    <div class="mx-8 flex flex-col justify-center gap-2 md:flex-row">
      <JumpButton
        id="btn-download"
        jumpRef="download-section"
        class="inline-flex transform items-center justify-center gap-2 rounded-full bg-gradient-to-r from-blue-600 to-blue-700 px-8 py-3 text-white shadow-md transition duration-300 hover:scale-105 hover:shadow-lg">
        <Icon name="download" size={25} />
        Download Now
      </JumpButton>
      <a
        href="https://github.com/ehsan18t/easy-mingw-installer"
        target="_blank"
        rel="noopener noreferrer"
        class="remove-underline inline-flex transform items-center justify-center gap-2 rounded-full bg-gradient-to-r from-gray-700 to-slate-800 px-6 py-3 text-white shadow-md transition duration-300 hover:scale-105 hover:shadow-lg">
        <Icon name="github" size={25} />
        View Project on GitHub
      </a>
    </div>
  </div>
</section>
