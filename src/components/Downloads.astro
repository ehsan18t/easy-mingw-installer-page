---
import { Icon } from "astro-icon/components";
import DownloadLink from "./DownloadLink.astro";
---

<div class="rounded-2xl border border-gray-100 py-8">
  <!-- Section header -->
  <div class="mb-8 text-center">
    <div class="mb-2 inline-flex items-center justify-center gap-2 text-blue-600">
      <Icon name="mdi:cloud-download-outline" size={24} />
      <span class="font-medium">Ready To Install</span>
    </div>
    <h2 class="text-2xl font-bold text-gray-800 md:text-3xl">Choose Your Version</h2>
    <p class="mx-auto mt-2 max-w-2xl text-gray-600">Select the appropriate version for your system. Both versions include the latest GCC compiler and essential development tools.</p>
  </div>

  <!-- Download cards container -->
  <div class="flex flex-col items-center justify-center gap-6 md:flex-row md:gap-8">
    <DownloadLink id="btn-dl-64" platform="Windows 64-bit" />
    <DownloadLink id="btn-dl-32" platform="Windows 32-bit" />
  </div>
</div>
