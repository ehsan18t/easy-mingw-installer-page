---
import { Icon } from "astro-icon/components";

type DownloadLinkProps = {
    id: string;
    platform: string;
};

const { id, platform } = Astro.props as DownloadLinkProps;
---

<a
    id={id}
    href={id}
    target="_blank"
    class="remove-underline w-full px-4 md:px-0 lg:w-2/5"
    rel="noreferrer">
    <div
        class="transform overflow-hidden rounded-lg border shadow-md transition duration-300 ease-in-out hover:scale-105 hover:shadow-lg">
        <div class="flex items-center justify-center bg-gradient-to-r from-blue-500 to-teal-500 p-6 text-white">
            <Icon name="download" size={40} />
        </div>
        <div class="bg-white p-6">
            <h3 class="mb-2 text-xl font-semibold text-gray-800">{platform}</h3>
            <p class="mb-2 text-gray-600">Click to download</p>
        </div>
    </div>
</a>
