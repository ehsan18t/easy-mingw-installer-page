---
import { Icon } from 'astro-icon/components';

type FeatureProps = {
  title: string;
  description: string;
  icon: string;
};

const { title, description, icon } = Astro.props as FeatureProps;
---

<div class="flex items-center gap-4 bg-white px-5 py-3 shadow rounded-2xl">
  <div class="flex items-center justify-center rounded-full bg-blue-500 p-4 text-2xl text-white">
    <Icon name={icon} size={25} />
  </div>
  <div>
    <h3 class="mb-2 text-lg font-semibold">{title}</h3>
    <p class="text-justify text-gray-700">{description}</p>
  </div>
</div>
